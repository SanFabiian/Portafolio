.nav
    width 100%
    height 60%
    position fixed
    top -10%
    display flex
    align-items flex-end
    background alpha(color_third, .95)
    transform translateY(-100%)
    color color_light
.nav__list
    width 100%
    flex_position(flex,column,flex-end,flex-start)
    h2
        font-size font_size-subtitle
        padding 0 10%
    li
        width 100%
    a
        display block
        font-size font_size-paragraph
        color color_light
        width 100%
        padding 5% 15%
.nav__icon
    burgerNavIco(absolute, 9rem,alpha(color_light, .2))
    flex_position()
	img
		width size_icos
.navActive
    animation-name navActive
    animation-duration .7s
    animation-fill-mode forwards
@keyframes navActive
    from
        transform translateY(-100%)
    50%
        transform translateY(10%)
    to
        transform translateY(0)
.navNoActive
    animation-name navNoActive
    animation-duration .7s
    animation-fill-mode forwards
@keyframes navNoActive
    from
        transform translateY(0)
    50%
        transform translateY(10%)
    to
        transform translateY(-100%)